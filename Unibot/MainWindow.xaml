<Window x:Class="Unibot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:Unibot"
        xmlns:conv="clr-namespace:Unibot.Converters"
        mc:Ignorable="d"
        Title="Unibot" 
        Height="800" Width="1200"
        MinHeight="700" MinWidth="1000"
        Background="{StaticResource AppBackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BoolToVis" />
        <conv:InvertBooleanConverter x:Key="InvertBool" />
        <conv:EnumToStringConverter x:Key="EnumToString" />
        <conv:DoubleToStringConverter x:Key="DoubleToString" />
        <conv:EnumToVisibilityConverter x:Key="EnumToVis" />
        
        <Style x:Key="ModernSliderThumbStyle" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Grid>
                            <Border Name="ThumbFill" Background="{StaticResource AccentFillColorDefaultBrush}" CornerRadius="2" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Status Light Style -->
        <Style x:Key="StatusLightStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="12" />
            <Setter Property="Height" Value="12" />
            <Setter Property="Fill" Value="#FF4444" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsActive}" Value="True">
                    <Setter Property="Fill" Value="#44FF44" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12" Background="{StaticResource AppBackgroundBrush}" 
            BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Sidebar Navigation -->
            <Border Grid.Column="0" Background="{StaticResource SidebarBackgroundBrush}" 
                    CornerRadius="12,0,0,12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- App Header -->
                    <StackPanel Grid.Row="0" Margin="24,32,24,32">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <Border Background="{StaticResource AccentGradientBrush}" 
                                    Width="40" Height="40" CornerRadius="10" Margin="0,0,12,0">
                                <TextBlock Text="U" FontSize="20" FontWeight="Bold" Foreground="White" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center" 
                                          FontFamily="{StaticResource PrimaryFontFamily}" />
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Unibot" FontSize="20" FontWeight="SemiBold" 
                                          Foreground="{StaticResource TextPrimaryBrush}" 
                                          FontFamily="{StaticResource PrimaryFontFamily}" />
                                <TextBlock Text="Gaming Assistant" FontSize="12" 
                                          Foreground="{StaticResource TextTertiaryBrush}" 
                                          FontFamily="{StaticResource PrimaryFontFamily}" />
                            </StackPanel>
                        </StackPanel>

                        <!-- Status Overview -->
                        <Border Background="#1F2937" CornerRadius="8" Padding="16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="System Status" FontSize="13" FontWeight="Medium" 
                                          Foreground="{StaticResource TextSecondaryBrush}" 
                                          FontFamily="{StaticResource PrimaryFontFamily}" Margin="0,0,0,12" />

                                <StackPanel Grid.Row="1">
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Grid.Column="0" x:Name="AimStatusIndicator" Style="{StaticResource StatusIndicatorStyle}" Margin="0,0,8,0" />
                                        <TextBlock Grid.Column="1" Text="Aim Assist" FontSize="12" 
                                                  Foreground="{StaticResource TextSecondaryBrush}" 
                                                  FontFamily="{StaticResource PrimaryFontFamily}" VerticalAlignment="Center" />
                                        <TextBlock Grid.Column="2" x:Name="AimStatusText" Text="Inactive" FontSize="11" 
                                                  Foreground="{StaticResource DangerAccentBrush}" 
                                                  FontFamily="{StaticResource MonoFontFamily}" />
                                    </Grid>

                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Grid.Column="0" x:Name="RecoilStatusIndicator" Style="{StaticResource StatusIndicatorStyle}" Margin="0,0,8,0" />
                                        <TextBlock Grid.Column="1" Text="Recoil Control" FontSize="12" 
                                                  Foreground="{StaticResource TextSecondaryBrush}" 
                                                  FontFamily="{StaticResource PrimaryFontFamily}" VerticalAlignment="Center" />
                                        <TextBlock Grid.Column="2" x:Name="RecoilStatusText" Text="Inactive" FontSize="11" 
                                                  Foreground="{StaticResource DangerAccentBrush}" 
                                                  FontFamily="{StaticResource MonoFontFamily}" />
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Grid.Column="0" x:Name="TriggerStatusIndicator" Style="{StaticResource StatusIndicatorStyle}" Margin="0,0,8,0" />
                                        <TextBlock Grid.Column="1" Text="Triggerbot" FontSize="12" 
                                                  Foreground="{StaticResource TextSecondaryBrush}" 
                                                  FontFamily="{StaticResource PrimaryFontFamily}" VerticalAlignment="Center" />
                                        <TextBlock Grid.Column="2" x:Name="TriggerStatusText" Text="Inactive" FontSize="11" 
                                                  Foreground="{StaticResource DangerAccentBrush}" 
                                                  FontFamily="{StaticResource MonoFontFamily}" />
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Navigation Menu -->
                    <StackPanel Grid.Row="1" Margin="16,0">
                        <Button x:Name="DetectionNavButton" Content="● Detection" 
                                Style="{StaticResource ActiveNavigationButtonStyle}" 
                                Click="NavigationButton_Click" Tag="Detection" />
                        <Button x:Name="AimNavButton" Content="● Aim Settings" 
                                Style="{StaticResource NavigationButtonStyle}" 
                                Click="NavigationButton_Click" Tag="Aim" />
                        <Button x:Name="RecoilNavButton" Content="● Recoil Control" 
                                Style="{StaticResource NavigationButtonStyle}" 
                                Click="NavigationButton_Click" Tag="Recoil" />
                        <Button x:Name="TriggerNavButton" Content="● Triggerbot" 
                                Style="{StaticResource NavigationButtonStyle}" 
                                Click="NavigationButton_Click" Tag="Trigger" />
                        <Button x:Name="CommunicationNavButton" Content="● Communication" 
                                Style="{StaticResource NavigationButtonStyle}" 
                                Click="NavigationButton_Click" Tag="Communication" />
                        <Button x:Name="DebugNavButton" Content="● Debug" 
                                Style="{StaticResource NavigationButtonStyle}" 
                                Click="NavigationButton_Click" Tag="Debug" />
                    </StackPanel>

                    <!-- Control Buttons -->
                    <StackPanel Grid.Row="2" Margin="24,24,24,32">
                        <Button x:Name="StartButton" Content="► Start Unibot" 
                                Style="{StaticResource ModernButtonStyle}" 
                                Height="48" Margin="0,0,0,12" 
                                FontSize="15" Click="StartButton_Click" />
                        <Button x:Name="StopButton" Content="■ Stop Unibot" 
                                Style="{StaticResource ModernSecondaryButtonStyle}" 
                                Height="40" IsEnabled="False" 
                                FontSize="14" Click="StopButton_Click" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Header Bar -->
                <Border Grid.Row="0" Background="{StaticResource ContentBackgroundBrush}" 
                        CornerRadius="0,12,0,0" BorderBrush="{StaticResource SeparatorBrush}" 
                        BorderThickness="1,0,0,1">
                    <Grid Height="64" Margin="32,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock x:Name="PageTitleText" Text="Detection &amp; Targeting" 
                                      FontSize="24" FontWeight="SemiBold" 
                                      Foreground="{StaticResource TextPrimaryBrush}" 
                                      FontFamily="{StaticResource PrimaryFontFamily}" />
                            <TextBlock x:Name="PageSubtitleText" Text="Configure color detection and field of view settings" 
                                      FontSize="14" 
                                      Foreground="{StaticResource TextSecondaryBrush}" 
                                      FontFamily="{StaticResource PrimaryFontFamily}" />
                        </StackPanel>

                        <!-- Window Controls -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                            <Button Content="_" Width="32" Height="32" Margin="4,0" 
                                    Style="{StaticResource ModernSecondaryButtonStyle}" 
                                    Click="MinimizeButton_Click" />
                            <Button Content="[]" Width="32" Height="32" Margin="4,0" 
                                    Style="{StaticResource ModernSecondaryButtonStyle}" 
                                    Click="MaximizeButton_Click" />
                            <Button Content="X" Width="32" Height="32" Margin="4,0" 
                                    Style="{StaticResource ModernSecondaryButtonStyle}" 
                                    Click="CloseButton_Click" />
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Content Panels -->
                <Border Grid.Row="1" Background="{StaticResource ContentBackgroundBrush}" 
                        CornerRadius="0,0,12,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                                  Padding="32">
                        <StackPanel>
                            <!-- Detection Panel -->
                            <StackPanel x:Name="DetectionPanel" Visibility="Visible">
                        <!-- Color Detection Card -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Color Detection" Style="{StaticResource ModernSectionHeaderStyle}" />
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Lower HSV Range -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Lower HSV Range" Style="{StaticResource ModernLabelStyle}" />
                                        
                                        <StackPanel Margin="0,0,0,16">
                                            <TextBlock Text="Hue" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Screen.ColorRange.Lower.H, Mode=TwoWay}" 
                                                       Minimum="0" Maximum="179" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Screen.ColorRange.Lower.H}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                        
                                        <StackPanel Margin="0,0,0,16">
                                            <TextBlock Text="Saturation" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Screen.ColorRange.Lower.S, Mode=TwoWay}" 
                                                       Minimum="0" Maximum="255" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Screen.ColorRange.Lower.S}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                        
                                        <StackPanel>
                                            <TextBlock Text="Value" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Screen.ColorRange.Lower.V, Mode=TwoWay}" 
                                                       Minimum="0" Maximum="255" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Screen.ColorRange.Lower.V}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <!-- Upper HSV Range -->
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Upper HSV Range" Style="{StaticResource ModernLabelStyle}" />
                                        
                                        <StackPanel Margin="0,0,0,16">
                                            <TextBlock Text="Hue" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Screen.ColorRange.Upper.H, Mode=TwoWay}" 
                                                       Minimum="0" Maximum="179" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Screen.ColorRange.Upper.H}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                        
                                        <StackPanel Margin="0,0,0,16">
                                            <TextBlock Text="Saturation" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Screen.ColorRange.Upper.S, Mode=TwoWay}" 
                                                       Minimum="0" Maximum="255" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Screen.ColorRange.Upper.S}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                        
                                        <StackPanel>
                                            <TextBlock Text="Value" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Screen.ColorRange.Upper.V, Mode=TwoWay}" 
                                                       Minimum="0" Maximum="255" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Screen.ColorRange.Upper.V}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Field of View Card -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Field of View" Style="{StaticResource ModernSectionHeaderStyle}" />
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <StackPanel Margin="0,0,0,16">
                                            <TextBlock Text="Detection FOV X" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Screen.FovX, Mode=TwoWay}" 
                                                       Minimum="50" Maximum="500" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Screen.FovX}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                        
                                        <StackPanel>
                                            <TextBlock Text="Detection FOV Y" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Screen.FovY, Mode=TwoWay}" 
                                                       Minimum="50" Maximum="500" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Screen.FovY}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2">
                                        <StackPanel Margin="0,0,0,16">
                                            <TextBlock Text="Aim FOV X" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Screen.AimFovX, Mode=TwoWay}" 
                                                       Minimum="50" Maximum="500" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Screen.AimFovX}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                        
                                        <StackPanel>
                                            <TextBlock Text="Aim FOV Y" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Screen.AimFovY, Mode=TwoWay}" 
                                                       Minimum="50" Maximum="500" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Screen.AimFovY}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Screen Capture Card -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Screen Capture" Style="{StaticResource ModernSectionHeaderStyle}" />
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <StackPanel Margin="0,0,0,16">
                                            <TextBlock Text="Capture FPS" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Screen.Fps, Mode=TwoWay}" 
                                                       Minimum="30" Maximum="240" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Screen.Fps}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                        
                                        <StackPanel>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Auto-detect Resolution" Style="{StaticResource ModernLabelStyle}" />
                                                <ToggleButton Grid.Column="1" IsChecked="{Binding Configuration.Screen.AutoDetectResolution}"
                                                            Style="{StaticResource ModernToggleStyle}" />
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2" 
                                               IsEnabled="{Binding Configuration.Screen.AutoDetectResolution, Converter={StaticResource InvertBool}}">
                                        <StackPanel Margin="0,0,0,16">
                                            <TextBlock Text="Screen Width" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Screen.ResolutionX, Mode=TwoWay}" 
                                                       Minimum="800" Maximum="3840" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Screen.ResolutionX}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                        
                                        <StackPanel>
                                            <TextBlock Text="Screen Height" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Screen.ResolutionY, Mode=TwoWay}" 
                                                       Minimum="600" Maximum="2160" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Screen.ResolutionY}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Aim Panel -->
                    <StackPanel x:Name="AimPanel" Visibility="Collapsed">
                        <!-- Aim Speed & Smoothing Card -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Aim Speed &amp; Smoothing" Style="{StaticResource ModernSectionHeaderStyle}" />

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Left Column -->
                                    <StackPanel Grid.Column="0">
                                        <!-- Aim Speed -->
                                        <StackPanel Margin="0,0,0,16">
                                            <TextBlock Text="Aim Speed" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Aim.Speed, Mode=TwoWay}" Minimum="0.1" Maximum="5.0" SmallChange="0.1" LargeChange="0.5" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Aim.Speed, Converter={StaticResource DoubleToString}}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>

                                        <!-- Y-Axis Speed Multiplier -->
                                        <StackPanel>
                                            <TextBlock Text="Y-Axis Speed Multiplier" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Aim.YSpeed, Mode=TwoWay}" Minimum="0.1" Maximum="2.0" SmallChange="0.1" LargeChange="0.2" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Aim.YSpeed, Converter={StaticResource DoubleToString}}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Right Column -->
                                    <StackPanel Grid.Column="2">
                                        <!-- Smoothing -->
                                        <StackPanel Margin="0,0,0,16">
                                            <TextBlock Text="Smoothing" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Aim.Smooth, Mode=TwoWay}" Minimum="0.0" Maximum="1.0" SmallChange="0.05" LargeChange="0.1" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Aim.Smooth, Converter={StaticResource DoubleToString}}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>

                                        <!-- Aim Height Offset -->
                                        <StackPanel>
                                            <TextBlock Text="Aim Height Offset" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Aim.AimHeight, Mode=TwoWay}" Minimum="0.0" Maximum="1.0" SmallChange="0.05" LargeChange="0.1" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Aim.AimHeight, Converter={StaticResource DoubleToString}}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Aim Offset Card -->
                        <Border Style="{StaticResource ModernCardStyle}" Margin="0,20,0,0">
                            <StackPanel>
                                <TextBlock Text="Aim Offset" Style="{StaticResource ModernSectionHeaderStyle}" />
                                
                                <!-- Vertical Offset -->
                                <StackPanel>
                                    <TextBlock Text="Vertical Offset (pixels)" Style="{StaticResource ModernLabelStyle}" />
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Slider Grid.Column="0" Value="{Binding Configuration.Aim.Offset, Mode=TwoWay}" Minimum="-50" Maximum="50" Style="{StaticResource ModernSliderStyle}" />
                                        <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                            <TextBlock Text="{Binding Configuration.Aim.Offset}" Style="{StaticResource ModernValueTextStyle}" />
                                        </Border>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Recoil Panel -->
                    <StackPanel x:Name="RecoilPanel" Visibility="Collapsed">
                        <!-- Recoil Mode Card -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Recoil Control Mode" Style="{StaticResource ModernSectionHeaderStyle}" />
                                
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Recoil Mode" Style="{StaticResource ModernLabelStyle}" />
                                    <ComboBox SelectedValue="{Binding Configuration.Recoil.Mode, Mode=TwoWay}" 
                                             SelectedValuePath="Tag"
                                             Style="{StaticResource ModernComboBoxStyle}">
                                        <ComboBoxItem Content="Move" Tag="Move" />
                                        <ComboBoxItem Content="Offset" Tag="Offset" />
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Recoil Settings Card -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Recoil Parameters" Style="{StaticResource ModernSectionHeaderStyle}" />
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <StackPanel Margin="0,0,0,16">
                                            <TextBlock Text="Horizontal Recoil" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Recoil.RecoilX, Mode=TwoWay}" 
                                                       Minimum="-50.0" Maximum="50.0" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Recoil.RecoilX, StringFormat=F1}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                        
                                        <StackPanel>
                                            <TextBlock Text="Vertical Recoil" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Recoil.RecoilY, Mode=TwoWay}" 
                                                       Minimum="-50.0" Maximum="50.0" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Recoil.RecoilY, StringFormat=F1}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2">
                                        <StackPanel Margin="0,0,0,16">
                                            <TextBlock Text="Max Offset" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Recoil.MaxOffset, Mode=TwoWay}" 
                                                       Minimum="10" Maximum="500" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Recoil.MaxOffset}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                        
                                        <StackPanel>
                                            <TextBlock Text="Recovery Rate" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Recoil.Recover, Mode=TwoWay}" 
                                                       Minimum="0.0" Maximum="100.0" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Recoil.Recover, StringFormat=F1}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Trigger Panel -->
                    <StackPanel x:Name="TriggerPanel" Visibility="Collapsed">
                        <!-- Triggerbot Settings Card -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Triggerbot Configuration" Style="{StaticResource ModernSectionHeaderStyle}" />
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <StackPanel Margin="0,0,0,16">
                                            <TextBlock Text="Trigger Delay (ms)" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Trigger.TriggerDelay, Mode=TwoWay}" 
                                                       Minimum="0" Maximum="500" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Trigger.TriggerDelay}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                        
                                        <StackPanel>
                                            <TextBlock Text="Trigger Threshold" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Trigger.TriggerThreshold, Mode=TwoWay}" 
                                                       Minimum="1" Maximum="20" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Trigger.TriggerThreshold}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2">
                                        <StackPanel>
                                            <TextBlock Text="Randomization (ms)" Style="{StaticResource ModernLabelStyle}" />
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Slider Grid.Column="0" Value="{Binding Configuration.Trigger.TriggerRandomization, Mode=TwoWay}" 
                                                       Minimum="0" Maximum="100" Style="{StaticResource ModernSliderStyle}" />
                                                <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                                    <TextBlock Text="{Binding Configuration.Trigger.TriggerRandomization}" Style="{StaticResource ModernValueTextStyle}" />
                                                </Border>
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Rapid Fire Settings Card -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Rapid Fire Configuration" Style="{StaticResource ModernSectionHeaderStyle}" />
                                
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Target CPS (Clicks Per Second)" Style="{StaticResource ModernLabelStyle}" />
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Slider Grid.Column="0" Value="{Binding Configuration.RapidFire.TargetCps, Mode=TwoWay}" 
                                               Minimum="1" Maximum="20" Style="{StaticResource ModernSliderStyle}" />
                                        <Border Grid.Column="1" Style="{StaticResource ModernValueStyle}" Margin="12,0,0,0">
                                            <TextBlock Text="{Binding Configuration.RapidFire.TargetCps}" Style="{StaticResource ModernValueTextStyle}" />
                                        </Border>
                                    </Grid>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Communication Panel -->
                    <StackPanel x:Name="CommunicationPanel" Visibility="Collapsed">
                        <!-- Communication Type Card -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Communication Method" Style="{StaticResource ModernSectionHeaderStyle}" />
                                
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="Input Method" Style="{StaticResource ModernLabelStyle}" />
                                    <ComboBox SelectedValue="{Binding Configuration.Communication.Type, Mode=TwoWay}" 
                                             SelectedValuePath="Tag"
                                             Style="{StaticResource ModernComboBoxStyle}">
                                        <ComboBoxItem Content="None (WinAPI)" Tag="None" />
                                        <ComboBoxItem Content="Serial (COM Port)" Tag="Serial" />
                                        <ComboBoxItem Content="Socket (Network)" Tag="Socket" />
                                        <ComboBoxItem Content="Driver (Interception)" Tag="Driver" />
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Serial Settings Card -->
                        <Border Style="{StaticResource ModernCardStyle}" 
                               Visibility="{Binding Configuration.Communication.Type, Converter={StaticResource EnumToVis}, ConverterParameter=Serial}">
                            <StackPanel>
                                <TextBlock Text="Serial Communication" Style="{StaticResource ModernSectionHeaderStyle}" />
                                
                                <StackPanel Margin="0,0,0,16">
                                    <TextBlock Text="COM Port" Style="{StaticResource ModernLabelStyle}" />
                                    <ComboBox ItemsSource="{Binding AvailableComPorts}" 
                                              SelectedItem="{Binding Configuration.Communication.ComPort, Mode=TwoWay}"
                                              IsEnabled="{Binding Path=Configuration.Communication.Type, Converter={StaticResource EnumToVis}, ConverterParameter=Serial}"
                                              Style="{StaticResource ModernComboBoxStyle}" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Network Settings Card -->
                        <Border Style="{StaticResource ModernCardStyle}" 
                               Visibility="{Binding Configuration.Communication.Type, Converter={StaticResource EnumToVis}, ConverterParameter=Socket}">
                            <StackPanel>
                                <TextBlock Text="Network Communication" Style="{StaticResource ModernSectionHeaderStyle}" />
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="IP Address" Style="{StaticResource ModernLabelStyle}" />
                                        <TextBox Text="{Binding Configuration.Communication.Ip, Mode=TwoWay}" 
                                                Style="{StaticResource ModernTextBoxStyle}" 
                                                ToolTip="Enter IP address (e.g., 192.168.1.100)" />
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Port" Style="{StaticResource ModernLabelStyle}" />
                                        <TextBox Text="{Binding Configuration.Communication.Port, Mode=TwoWay}" 
                                                Style="{StaticResource ModernTextBoxStyle}" 
                                                ToolTip="Enter port number (e.g., 50124)" />
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Debug Panel -->
                    <StackPanel x:Name="DebugPanel" Visibility="Collapsed">
                        <!-- Debug Settings Card -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Debug Configuration" Style="{StaticResource ModernSectionHeaderStyle}" />
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <StackPanel Grid.Column="0">
                                        <StackPanel Margin="0,0,0,16">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Enable Debug Mode" Style="{StaticResource ModernLabelStyle}" />
                                                <ToggleButton Grid.Column="1" IsChecked="{Binding Configuration.Debug.Enabled}"
                                                            Style="{StaticResource ModernToggleStyle}" />
                                            </Grid>
                                        </StackPanel>
                                        
                                        <StackPanel>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Text="Always Show Debug" Style="{StaticResource ModernLabelStyle}" />
                                                <ToggleButton Grid.Column="1" IsChecked="{Binding Configuration.Debug.AlwaysOn}"
                                                            Style="{StaticResource ModernToggleStyle}" />
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Column="2">
                                        <StackPanel Margin="0,0,0,16">
                                            <TextBlock Text="Display Mode" Style="{StaticResource ModernLabelStyle}" />
                                            <ComboBox SelectedValue="{Binding Configuration.Debug.DisplayMode, Mode=TwoWay}" 
                                                     SelectedValuePath="Tag"
                                                     Style="{StaticResource ModernComboBoxStyle}">
                                                <ComboBoxItem Content="Game" Tag="Game" />
                                                <ComboBoxItem Content="Mask" Tag="Mask" />
                                            </ComboBox>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Live Preview Card -->
                        <Border Style="{StaticResource ModernCardStyle}">
                            <StackPanel>
                                <TextBlock Text="Live Preview" Style="{StaticResource ModernSectionHeaderStyle}" />
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <Button Grid.Column="0" x:Name="PreviewButton" Content="Start Preview" 
                                           Style="{StaticResource ModernButtonStyle}" 
                                           Width="120" Height="40" Margin="0,0,16,0"
                                           Click="PreviewButton_Click" />
                                           
                                    <Border Grid.Column="1" Background="#1F2937" CornerRadius="8" 
                                           Height="200" MinWidth="300">
                                        <Image x:Name="PreviewImage" Stretch="Uniform" />
                                    </Border>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>